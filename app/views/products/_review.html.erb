 <p>Reviews for <%= @product.name %></p>
    <% @product.reviews.each do |review| %>
      <p>
        <%= review.comment %>
    
        <% if review.user != nil %>
          <em> by <%= review.user.email %></em>
        <br><br>
          Added on: <%= review.created_at %>
        <% end %>
      </p>
        <% if review.user_id == session[:user_id] %>
          <%= link_to "Delete", product_review_path(@product, review), method: :delete, data: {confirm: "Are you sure you want to delete this reservation"} %>
          <%= link_to "Edit", edit_product_review_path(@product, review), data: {confirm: "Are you sure you want to edit your reservation?"} %>
          
      <% end %>
    <% end %>